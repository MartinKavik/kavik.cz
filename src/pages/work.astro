---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => (a.data.sortOrder ?? 999) - (b.data.sortOrder ?? 999),
);
---

<BaseLayout
	title="Work | Martin Kavík"
	description="Rust, WebAssembly, and product design projects by Martin Kavík"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Work"
				tagline="Frameworks, tools, and product design work that I keep shipping."
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
