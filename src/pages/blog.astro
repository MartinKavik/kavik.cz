---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PostPreview from '../components/PostPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = (await getCollection('posts')).sort(
	(a, b) => (a.data.sortOrder ?? 999) - (b.data.sortOrder ?? 999),
);
---

<BaseLayout
	title="Blog | Martin KavÃ­k"
	description="Writing about Rust, WebAssembly, and product design experiments"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8 page-content">
			<div class="deco-bricks" aria-hidden="true">
				<div class="deco-brick b1"></div>
				<div class="deco-brick b2"></div>
			</div>
			<Hero
				title="Blog"
				tagline="News, notes, and build logs."
				align="center"
			/>
			<div class="blog-grid">
				<Grid variant="offset">
					{
						posts.map((post) => (
							<li>
								<PostPreview post={post} />
							</li>
						))
					}
				</Grid>
			</div>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.page-content {
		position: relative;
	}

	.blog-grid {
		max-width: 63rem;
		margin: 0 auto;
	}

	.deco-bricks {
		position: absolute;
		inset: 0;
		pointer-events: none;
		z-index: -1;
	}

	.deco-brick {
		position: absolute;
		opacity: 0.15;
	}

	.b1 {
		background: #e63946;
		width: 55px;
		height: 50px;
		right: 2%;
		top: 0;
	}

	.b2 {
		background: #2a9d8f;
		width: 50px;
		height: 40px;
		left: 3%;
		top: 3.5rem;
	}

	@media (min-width: 50em) {
		.b1 {
			width: 80px;
			height: 70px;
		}

		.b2 {
			width: 70px;
			height: 55px;
		}
	}
</style>
