---
import { getCollection } from 'astro:content';
// Component Imports
import CallToAction from '../components/CallToAction.astro';
// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import PostPreview from '../components/PostPreview.astro';
import Skills from '../components/Skills.astro';
// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Content Fetching: List four work projects sorted by sortOrder (lower first)
const projects = (await getCollection('work'))
	.sort((a, b) => (a.data.sortOrder ?? 999) - (b.data.sortOrder ?? 999))
	.slice(0, 4);

const posts = (await getCollection('posts'))
	.sort((a, b) => (a.data.sortOrder ?? 999) - (b.data.sortOrder ?? 999))
	.slice(0, 3);

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="index-hero">
				<!-- Decorative bricks under nav -->
				<div class="deco-bricks hero-bricks" aria-hidden="true">
					<div class="deco-brick b1"></div>
					<div class="deco-brick b2"></div>
					<div class="deco-brick b3"></div>
				</div>
				<Hero
					title="Martin&nbsp;Kavík"
					tagline="15+ years building the full stack.<br>From ideas and business requirements to silicon."
					align="start"
				>
					<div class="roles">
						<Pill><Icon icon="code" size="1.33em" /> Rust & Wasm</Pill>
						<Pill><Icon icon="pencil-line" size="1.33em" /> Product Design</Pill>
						<Pill><Icon icon="heart" size="1.33em" /> Open Source</Pill>
					</div>
				</Hero>

				<div class="photo-wrapper">
					<img
						alt="Martin Kavík enjoying coffee"
						width="480"
						height="620"
						src="/images/martin_coffee.png"
					/>
				</div>
			</header>

			<Skills />
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<!-- Decorative bricks for Selected Work -->
				<div class="deco-bricks section-bricks" aria-hidden="true">
					<div class="deco-brick b4"></div>
					<div class="deco-brick b5"></div>
				</div>
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Selected Work</h3>
					<p>I'm mostly a toolmaker.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						View All Work
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>

			<section class="section with-background bg-variant with-cta">
				<!-- Decorative bricks for News & Notes -->
				<div class="deco-bricks section-bricks-alt" aria-hidden="true">
					<div class="deco-brick b6"></div>
					<div class="deco-brick b7"></div>
				</div>
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>News & Notes</h3>
					<p>From the workshop.</p>
				</header>

				<div class="gallery">
					<Grid variant="small">
						{
							posts.map((post) => (
								<li>
									<PostPreview post={post} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/blog/">
						View All Posts
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.index-hero {
		position: relative;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		padding-block: 2rem;
	}

	.roles {
		display: none;
	}

	.photo-wrapper {
		position: relative;
		width: min(15rem, 32vw);
		aspect-ratio: 1 / 1;
		border-radius: 50%;
		padding: var(--rainbow-border-width);
		background: var(--rainbow-gradient);
		background-size: 200% 100%;
		background-position: 60% 0;
		box-shadow: var(--shadow-md);
		transition: transform 180ms ease, box-shadow 180ms ease;
	}

	.photo-wrapper:hover {
		transform: scale(1.025);
		box-shadow: var(--shadow-lg);
		animation: rainbow-shift 4s linear infinite;
	}

	.index-hero img {
		width: 100%;
		height: 100%;
		display: block;
		object-fit: cover;
		object-position: center;
		border-radius: 50%;
		filter: saturate(1.05) brightness(1.02);
	}

	:global(:root:not(.theme-dark)) .index-hero img {
		filter: saturate(1.12) brightness(1.06);
	}

	@media (min-width: 900px) {
		.index-hero {
			display: grid;
			grid-template-columns: auto auto;
			padding-inline: 2.5rem;
			padding-block: 7rem;
			gap: 3rem;
			align-items: center;
			justify-content: center;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
		}

		.photo-wrapper {
			width: min(15rem, 100%);
			justify-self: start;
			align-self: center;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.photo-wrapper {
			transition: none;
		}

		.photo-wrapper:hover {
			transform: none;
			animation: none;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}


	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery' 'cta cta cta cta';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: center;
			text-align: center;
		}

		.with-cta .cta {
			justify-self: center;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

	.mention-card {
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: var(--gray-300);
		background: var(--gradient-subtle);
		box-shadow: var(--shadow-sm);
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: 1.5rem;
			height: 9.5rem;
		}
	}

	/* ====================================================== */
	/* Decorative bricks */

	.deco-bricks {
		position: absolute;
		pointer-events: none;
		z-index: -1;
	}

	.deco-brick {
		position: absolute;
		opacity: 0.18;
	}

	/* Hero bricks - under nav area */
	.hero-bricks {
		top: -4rem;
		left: 0;
		right: 0;
		height: 200px;
	}

	.hero-bricks .b1 {
		background: #3a86ff;
		width: 80px;
		height: 40px;
		left: 5%;
		top: 20px;
	}

	.hero-bricks .b2 {
		background: #7209b7;
		width: 50px;
		height: 70px;
		right: 10%;
		top: 60px;
	}

	.hero-bricks .b3 {
		background: #e9c46a;
		width: 60px;
		height: 35px;
		left: 25%;
		top: 100px;
	}

	/* Section bricks - Selected Work */
	.section-bricks {
		top: -3rem;
		left: 0;
		right: 0;
		height: 150px;
	}

	.section-bricks .b4 {
		background: #e63946;
		width: 70px;
		height: 45px;
		left: 2%;
		top: 0;
	}

	.section-bricks .b5 {
		background: #00b4d8;
		width: 55px;
		height: 55px;
		right: 5%;
		top: 30px;
	}

	/* Section bricks alt - News & Notes */
	.section-bricks-alt {
		top: -3rem;
		left: 0;
		right: 0;
		height: 150px;
	}

	.section-bricks-alt .b6 {
		background: #2a9d8f;
		width: 60px;
		height: 50px;
		right: 3%;
		top: 10px;
	}

	.section-bricks-alt .b7 {
		background: #f72585;
		width: 45px;
		height: 65px;
		left: 8%;
		top: 40px;
	}

	@media (min-width: 50em) {
		.hero-bricks .b1 {
			width: 120px;
			height: 60px;
		}

		.hero-bricks .b2 {
			width: 80px;
			height: 100px;
		}

		.hero-bricks .b3 {
			width: 90px;
			height: 50px;
		}

		.section-bricks .b4 {
			width: 100px;
			height: 65px;
		}

		.section-bricks .b5 {
			width: 80px;
			height: 80px;
		}

		.section-bricks-alt .b6 {
			width: 90px;
			height: 70px;
		}

		.section-bricks-alt .b7 {
			width: 65px;
			height: 90px;
		}
	}
</style>
