---
import type { CollectionEntry } from 'astro:content';
import { render } from 'astro:content';
import Pill from './Pill.astro';

interface Props {
	project: CollectionEntry<'work'>;
}

const { project } = Astro.props;
const { data, id } = project;
const { Content } = await render(project);
---

<article class="card">
	<div class="image-wrapper">
		<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
	</div>
	<div class="content">
		<h3 class="title">{data.title}</h3>
		<p class="description">{data.description}</p>
		<div class="body">
			<Content />
		</div>
		<div class="tags">
			{data.tags.map((t) => <Pill>{t}</Pill>)}
		</div>
		{data.links && data.links.length > 0 && (
			<div class="links">
				{data.links.map((link) => (
					<a class="link-pill" href={link.url} target="_blank" rel="noopener">{link.name}</a>
				))}
			</div>
		)}
	</div>
</article>

<style>
	.card {
		position: relative;
		display: flex;
		flex-direction: column;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		box-shadow: var(--shadow-sm);
		transition: box-shadow var(--theme-transition);
		overflow: hidden;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.image-wrapper {
		background: var(--gray-999);
		padding: 1.5rem;
		position: relative;
		margin-top: 4px;
		margin-left: 4px;
		border-top-left-radius: calc(1rem - 4px);
	}

	.card::before {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(
			135deg,
			#e63946 0%,
			#f4a261 8%,
			#e9c46a 16%,
			#2a9d8f 24%,
			#00b4d8 32%,
			#3a86ff 40%,
			#7209b7 48%,
			#f72585 56%,
			#e63946 64%
		);
		background-size: 100% 100%;
		border-radius: 1rem;
		padding: 4px;
		-webkit-mask:
			linear-gradient(#fff 0 0) content-box,
			linear-gradient(#fff 0 0);
		-webkit-mask-composite: xor;
		mask:
			linear-gradient(#fff 0 0) content-box,
			linear-gradient(#fff 0 0);
		mask-composite: exclude;
		clip-path: polygon(
			0 0,
			100% 0,
			100% 4px,
			1.25rem 4px,
			1.25rem 1.25rem,
			4px 1.25rem,
			4px 100%,
			0 100%
		);
		z-index: 1;
		pointer-events: none;
	}

	.card:hover::before {
		animation: rainbow-shift-diagonal 4s linear infinite;
	}

	@keyframes rainbow-shift-diagonal {
		0% { background-position: 0 0; }
		100% { background-position: 200% 200%; }
	}

	.image-wrapper img {
		width: 100%;
		height: auto;
		max-height: 20rem;
		object-fit: contain;
		display: block;
		border-radius: 0.5rem;
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 1.5rem;
	}

	.title {
		font-family: var(--font-brand);
		font-size: var(--text-2xl);
		font-weight: 600;
		color: var(--gray-0);
		margin: 0;
	}

	.description {
		font-size: var(--text-lg);
		color: var(--gray-200);
		margin: 0;
		font-weight: 500;
	}

	.body {
		font-size: var(--text-md);
		color: var(--gray-300);
		line-height: 1.7;
	}

	.body :global(p) {
		margin: 0;
	}

	.body :global(p + p) {
		margin-top: 1rem;
	}

	.body :global(ul),
	.body :global(ol) {
		margin: 0.75rem 0;
		padding-left: 1.5rem;
	}

	.body :global(li) {
		margin: 0.35rem 0;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		padding-top: 0.5rem;
	}

	.links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.link-pill {
		display: inline-flex;
		align-items: center;
		padding: 0.5rem 1rem;
		border-radius: 999rem;
		border: 1px solid var(--gray-800);
		background: var(--gray-999_40);
		color: var(--gray-0);
		text-decoration: none;
		font-weight: 600;
		font-size: var(--text-sm);
		box-shadow: var(--shadow-sm);
		transition: box-shadow var(--theme-transition), transform var(--theme-transition);
	}

	.link-pill:hover,
	.link-pill:focus {
		box-shadow: var(--shadow-md);
		transform: translateY(-1px);
	}

	@media (min-width: 50em) {
		.image-wrapper {
			padding: 2rem;
		}

		.image-wrapper img {
			max-height: 24rem;
		}

		.content {
			padding: 2rem;
			gap: 1.25rem;
		}

		.title {
			font-size: var(--text-3xl);
		}
	}
</style>
