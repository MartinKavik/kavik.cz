---
import type { CollectionEntry } from 'astro:content';
import { render } from 'astro:content';
import Pill from './Pill.astro';
import Icon from './Icon.astro';

interface Props {
	project: CollectionEntry<'work'>;
}

const { project } = Astro.props;
const { data, id } = project;
const { Content } = await render(project);
---

<article class="card" id={id}>
	<div class="image-wrapper">
		<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
		<button class="expand-btn" aria-label="Enlarge image">
			<Icon icon="expand" size="1.25rem" />
		</button>
	</div>
	<div class="content">
		<div class="title-row">
			<h3 class="title">
				{data.title}
				<button class="link-copy-btn" data-id={id} aria-label="Copy link to this project" title="Copy link">
					<Icon icon="link" size="1.25rem" />
				</button>
			</h3>
			{data.links && data.links.length > 0 && (
				<div class="links">
					{data.links.map((link) => (
						<a class="link-btn" href={link.url} target="_blank" rel="noopener">{link.name}</a>
					))}
				</div>
			)}
		</div>
		<p class="description">{data.description}</p>
		<div class="body">
			<Content />
		</div>
		<div class="tags">
			{data.tags.map((t) => <Pill variant={t === 'WIP' ? 'wip' : 'default'}>{t}</Pill>)}
		</div>
	</div>
</article>

<style>
	.card {
		position: relative;
		display: flex;
		flex-direction: column;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		box-shadow: var(--shadow-sm);
		transition: box-shadow var(--theme-transition);
		overflow: hidden;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.card.highlighted {
		animation: highlight-pulse 1.5s ease-out;
	}

	@keyframes highlight-pulse {
		0% {
			box-shadow: 0 0 0 0 var(--accent-regular);
		}
		30% {
			box-shadow: 0 0 0 8px color-mix(in srgb, var(--accent-regular) 40%, transparent);
		}
		100% {
			box-shadow: var(--shadow-sm);
		}
	}

	.image-wrapper {
		background: var(--gray-999);
		padding: 1.5rem;
		position: relative;
		margin-top: 4px;
		margin-left: 4px;
		border-top-left-radius: calc(1rem - 4px);
	}

	.card::before {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(
			135deg,
			#e63946 0%,
			#f4a261 8%,
			#e9c46a 16%,
			#2a9d8f 24%,
			#00b4d8 32%,
			#3a86ff 40%,
			#7209b7 48%,
			#f72585 56%,
			#e63946 64%
		);
		background-size: 100% 100%;
		border-radius: 1rem;
		padding: 4px;
		-webkit-mask:
			linear-gradient(#fff 0 0) content-box,
			linear-gradient(#fff 0 0);
		-webkit-mask-composite: xor;
		mask:
			linear-gradient(#fff 0 0) content-box,
			linear-gradient(#fff 0 0);
		mask-composite: exclude;
		clip-path: polygon(
			0 0,
			100% 0,
			100% 4px,
			1.25rem 4px,
			1.25rem 1.25rem,
			4px 1.25rem,
			4px 100%,
			0 100%
		);
		z-index: 1;
		pointer-events: none;
	}

	.card:hover::before {
		animation: rainbow-shift-diagonal 4s linear infinite;
	}

	@keyframes rainbow-shift-diagonal {
		0% { background-position: 0 0; }
		100% { background-position: 200% 200%; }
	}

	.image-wrapper img {
		width: 100%;
		height: auto;
		max-height: 20rem;
		object-fit: contain;
		display: block;
		border-radius: 0.5rem;
		cursor: -webkit-zoom-in;
		cursor: zoom-in;
	}

	.expand-btn {
		position: absolute;
		top: 1.5rem;
		right: 1.5rem;
		width: 36px;
		height: 36px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--gray-900);
		border: 1px solid var(--gray-700);
		border-radius: 0.5rem;
		color: var(--gray-300);
		cursor: pointer;
		opacity: 0.7;
		transition: opacity 0.2s, background 0.2s, color 0.2s;
	}

	.expand-btn:hover {
		opacity: 1;
		background: var(--gray-800);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.expand-btn {
			top: 2rem;
			right: 2rem;
		}
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 1.5rem;
	}

	.title-row {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;
		gap: 0.75rem;
	}

	.title {
		font-family: var(--font-brand);
		font-size: var(--text-2xl);
		font-weight: 600;
		color: var(--gray-0);
		margin: 0;
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.link-copy-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		min-width: 44px;
		min-height: 44px;
		padding: 0.5rem;
		background: var(--gray-800);
		border: 1px solid var(--gray-700);
		border-radius: 0.5rem;
		color: var(--gray-300);
		cursor: pointer;
		transition: background 0.2s, color 0.2s, border-color 0.2s;
	}

	.link-copy-btn:hover {
		background: var(--gray-700);
		color: var(--gray-0);
		border-color: var(--gray-600);
	}

	.link-copy-btn.copied {
		background: var(--accent-regular);
		border-color: var(--accent-regular);
		color: var(--gray-999);
	}

	.links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.link-btn {
		position: relative;
		display: inline-flex;
		align-items: center;
		padding: 0.4em 1em;
		color: var(--gray-0);
		text-decoration: none;
		font-size: var(--text-sm);
		font-weight: 500;
		border-radius: 0.375rem;
		background: var(--gray-800);
		box-shadow: var(--shadow-sm);
		transition: background var(--theme-transition);
	}

	.link-btn::before {
		content: '';
		position: absolute;
		inset: 0;
		border-radius: 0.375rem;
		padding: 2px;
		background: var(--rainbow-gradient);
		background-size: 200% 100%;
		background-position: 60% 0;
		-webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
		mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
		-webkit-mask-composite: xor;
		mask-composite: exclude;
		pointer-events: none;
		opacity: 0.5;
	}

	.link-btn:hover::before,
	.link-btn:focus::before {
		opacity: 1;
		animation: rainbow-shift 4s linear infinite;
	}

	.link-btn:hover,
	.link-btn:focus {
		background: var(--gray-700);
	}

	.description {
		font-size: var(--text-lg);
		color: var(--gray-200);
		margin: 0;
		font-weight: 500;
	}

	.body {
		font-size: var(--text-md);
		color: var(--gray-300);
		line-height: 1.7;
	}

	.body :global(p) {
		margin: 0;
	}

	.body :global(p + p) {
		margin-top: 1rem;
	}

	.body :global(ul) {
		margin: 0.75rem 0;
		padding-left: 0.75rem;
	}

	.body :global(ol) {
		margin: 0.75rem 0;
		padding-left: 1.5rem;
	}

	.body :global(ol) {
		list-style: none;
		counter-reset: item;
	}

	.body :global(ol li) {
		counter-increment: item;
	}

	.body :global(ol li::before) {
		content: counter(item) ". ";
		color: var(--accent-regular);
		font-weight: 600;
	}

	.body :global(ul) {
		list-style: none;
	}

	.body :global(ul li::before) {
		content: "â– ";
		color: var(--accent-regular);
		font-size: 0.6em;
		margin-right: 0.75rem;
		display: inline-block;
		transform: translateY(-0.15em);
	}

	.body :global(li) {
		margin: 0.35rem 0;
	}

	.body :global(img) {
		border-radius: 0.5rem;
		cursor: -webkit-zoom-in;
		cursor: zoom-in;
	}

	.body :global(details) {
		margin-top: 1.5rem;
		scroll-margin-top: 2rem;
	}

	.body :global(summary) {
		cursor: pointer;
		color: var(--gray-100);
		font-weight: 500;
		padding: 0.5rem 0;
		margin-bottom: 1rem;
	}

	.body :global(summary:hover) {
		color: var(--accent-regular);
	}

	.body :global(details[open] summary) {
		color: var(--accent-regular);
	}

	.body :global(details[open]) {
		margin-bottom: 1.5rem;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		padding-top: 0.5rem;
	}

	@media (min-width: 50em) {
		.image-wrapper {
			padding: 2rem;
		}

		.image-wrapper img {
			max-height: 24rem;
		}

		.content {
			padding: 2rem;
			gap: 1.25rem;
		}

		.title {
			font-size: var(--text-3xl);
		}
	}

	.card {
		scroll-margin-top: 2rem;
	}
</style>

<script>
	function initPortfolioLinks() {
		// Handle hash navigation on page load
		const hash = window.location.hash.slice(1);
		if (hash) {
			const target = document.getElementById(hash);
			if (target?.classList.contains('card')) {
				// Small delay to ensure layout is complete
				setTimeout(() => {
					target.scrollIntoView({ behavior: 'smooth', block: 'start' });
					target.classList.add('highlighted');
					target.addEventListener('animationend', () => {
						target.classList.remove('highlighted');
					}, { once: true });
				}, 100);
			}
		}

		// Handle copy link buttons
		document.querySelectorAll('.link-copy-btn').forEach(btn => {
			btn.addEventListener('click', async (e) => {
				e.preventDefault();
				const id = (btn as HTMLElement).dataset.id;
				const url = `${window.location.origin}${window.location.pathname}#${id}`;

				try {
					await navigator.clipboard.writeText(url);
					btn.classList.add('copied');
					setTimeout(() => btn.classList.remove('copied'), 1500);
				} catch {
					// Fallback for older browsers
					const textArea = document.createElement('textarea');
					textArea.value = url;
					document.body.appendChild(textArea);
					textArea.select();
					document.execCommand('copy');
					document.body.removeChild(textArea);
					btn.classList.add('copied');
					setTimeout(() => btn.classList.remove('copied'), 1500);
				}
			});
		});
	}

	// Run on initial load
	initPortfolioLinks();

	// Re-run on Astro page transitions
	document.addEventListener('astro:page-load', initPortfolioLinks);
</script>
