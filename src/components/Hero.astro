---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title" set:html={title} />
		{tagline && <p class="tagline" set:html={tagline} />}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
		padding-bottom: 1.5rem;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	.tagline {
		margin-block: 0.25rem;
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
			padding-top: 1.5rem;
			padding-bottom: 2.5rem;
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}

		.tagline {
			margin-block: 0.5rem;
		}
	}
</style>
