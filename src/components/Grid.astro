---
interface Props {
	variant?: 'offset' | 'offset-large' | 'small';
}

const { variant } = Astro.props;
---

<ul class:list={['grid', { offset: variant === 'offset', 'offset-large': variant === 'offset-large', small: variant === 'small' }]}>
	<slot />
</ul>

<style>
	.grid {
		display: grid;
		gap: 2rem;
		list-style: none;
		padding: 0;
	}

	.grid.small {
		grid-template-columns: 1fr 1fr;
		gap: 1.5rem;
	}

	/* If last row contains only one item, make it span both columns. */
	.grid.small > :global(:last-child:nth-child(odd)) {
		grid-column: 1 / 3;
	}

	@media (min-width: 50em) {
		.grid {
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
		}

		.grid.offset {
			gap: 2rem 2rem;
			row-gap: 5rem;
			--row-offset: 8rem;
			padding-bottom: var(--row-offset);
		}

		/* Shift second item in each row down to create zigzag */
		.grid.offset > :global(:nth-child(even)) {
			transform: translateY(var(--row-offset));
		}

		.grid.offset-large {
			gap: 2rem 2rem;
			row-gap: 14rem;
			--row-offset: 30rem;
			padding-bottom: 0;
		}

		/* Only add padding when last item is offset (even position) */
		.grid.offset-large:has(> :last-child:nth-child(even)) {
			padding-bottom: var(--row-offset);
		}

		.grid.offset-large > :global(:nth-child(even)) {
			transform: translateY(var(--row-offset));
		}

		.grid.small {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			gap: 2rem;
		}

		.grid.small > :global(*) {
			flex-basis: 20rem;
		}
	}
</style>
