---
import type { CollectionEntry } from 'astro:content';

interface Props {
	post: CollectionEntry<'posts'>;
	isLatest?: boolean;
}

const { post, isLatest } = Astro.props;
---

<a class="card" href={`/blog/${post.id}/`}>
	<div class="top-row">
		{post.data.tags.length > 0 && <div class="tags">{post.data.tags.join(' â€¢ ')}</div>}
		{isLatest && <span class="latest-badge">Latest</span>}
	</div>
	<h3>{post.data.title}</h3>
	<p>{post.data.description}</p>
</a>

<style>
	.card {
		position: relative;
		display: grid;
		gap: 0.5rem;
		padding: 1.25rem;
		background: var(--gradient-subtle);
		border-radius: 0.5rem;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		color: inherit;
		transition: box-shadow var(--theme-transition), transform var(--theme-transition);
	}

	.card::before {
		content: '';
		position: absolute;
		inset: 0;
		border-radius: 0.5rem;
		padding: var(--rainbow-border-width);
		background: var(--rainbow-gradient);
		background-size: 200% 100%;
		background-position: 60% 0;
		-webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
		mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
		-webkit-mask-composite: xor;
		mask-composite: exclude;
		pointer-events: none;
	}

	.card:hover,
	.card:focus {
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}

	.card:hover::before,
	.card:focus::before {
		animation: rainbow-shift 4s linear infinite;
	}

	.top-row {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 0.5rem;
	}

	.tags {
		color: var(--gray-400);
		font-size: var(--text-xs);
		letter-spacing: 0.01em;
	}

	.latest-badge {
		font-size: var(--text-xs);
		font-weight: 600;
		padding: 0.2em 0.5em;
		border-radius: 0.25rem;
		background: var(--accent-regular);
		color: var(--accent-text-over);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	h3 {
		font-size: var(--text-lg);
		color: var(--gray-0);
	}

	p {
		margin: 0;
		color: var(--gray-300);
	}

	@media (min-width: 50em) {
		.card {
			gap: 0.75rem;
			padding: 1.5rem;
			border-radius: 0.75rem;
		}

		.card::before {
			border-radius: 0.75rem;
		}

		h3 {
			font-size: var(--text-xl);
		}
	}
</style>
